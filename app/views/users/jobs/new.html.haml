.row{ 'ng-controller' => 'WizardController', 'ng-init' => "init({ user_id: #{@user_id}, job_id: '#{@job.id}' })" }
  .col-md-3.wizard-sidebar.pull-right
    = render 'sidebar'
  .col-md-9.cornsilk
    .panel.panel-default.panel-wizard.panel-rounded
      .panel-body
        %ul.nav.nav-pills.nav-justified.nav-pills-wizard
          %li{ 'ng-class' => 'stepClass("car-details")' }
            = link_to '', 'ng-click' => 'gotoStep("car-details")' do
              %span 1
              Car Details
          %li{ 'ng-class' => 'stepClass("diagnose")' }
            = link_to '', 'ng-click' => 'gotoStep("diagnose")' do
              %span 2
              Diagnose
          %li{ 'ng-class' => 'stepClass("contact")' }
            = link_to '', 'ng-click' => 'gotoStep("contact")' do
              %span 3
              Contact
          %li{ 'ng-class' => 'stepClass("quote")' }
            = link_to '', 'ng-click' => 'gotoStep("quote")' do
              %span 4
              Quote
        = simple_form_for [:users, @job], url: users_jobs_path, html: { name: 'wizard_form', autocomplete: 'off' }, defaults: { required: false } do |f|
          = render 'users/jobs/steps/car_details', f: f
          = render 'users/jobs/steps/diagnose', f: f
          = render 'users/jobs/steps/contact', f: f
        = render 'users/jobs/steps/quote'
