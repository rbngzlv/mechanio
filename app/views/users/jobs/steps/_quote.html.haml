#step-quote{ 'ng-controller' => 'QuoteController', 'ng-show' => 'stepVisible("quote")', 'ng-init' => 'init()' }
  .wizard-body{ 'ng-show' => 'loading' }
    .row
      .col-md-12.text-center
        %h3 Waiting for your quote...
        .row
          .col-md-4.col-md-offset-4
            .progress.progress-striped.active
              .progress-bar{ "role" => "progressbar", "aria-valuenow" => "100", "aria-valuemin" => "0", "aria-valuemax" => "100", "style" => "width: 100%" }

  %div{ 'ng-hide' => 'loading' }
    .wizard-body{ 'ng-show' => 'error' }
      .row
        .col-md-12
          .alert.alert-danger
            %strong Oops
            , something went wrong...

    .wizard-body{ 'ng-hide' => 'error' }
      %div{ 'ng-show' => 'total' }
        %h4 Here is your quote
        %hr.hr-dark-gray
        %h4 {{total | currency}}

      %div{ 'ng-hide' => 'total' }
        %h4 Thanks for requesting a quote!
        %hr.hr-dark-gray
        %h4 Here's what's going to happen:
        .row
          %p.col-md-8
            We'll give you a call with a fixed quote within two hours, and match you with qualified mobile mechanics
            who can work on your car when you're ready.
        = link_to '', 'Check my job status'
    %hr

    %div{ 'ng-show' => 'total' }
      %a.btn.btn-primary.pull-right{ href: '' }
        Pick a mechanic
        %small &#x276F;

    %div{ 'ng-hide' => 'total' }
      = link_to 'Check my job status', '', class: 'btn btn-primary'

