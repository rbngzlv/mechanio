%h2 Sign up
.row
  .col-md-4
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { label: false, input_html: { autocomplete: 'off' }}) do |f|
      = f.error_notification
      = f.input :first_name, placeholder: 'First name', autofocus: true
      = f.input :last_name, placeholder: 'Last name'
      = f.input :email, placeholder: 'Email'
      = f.input :password, placeholder: 'Password'
      = f.button :submit, "Sign up"

    %br
    %ul.list-unstyled
      %li
        Already have an account?
        = link_to "Login", new_session_path(resource_name)

