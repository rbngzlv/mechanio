%h4 User details

%dl.dl-horizontal
  %dt Full name
  %dd= @user.full_name
  %dt Email
  %dd= @user.email
  %dt Signup date
  %dd= @user.created_at.to_s(:short)

= link_to "Delete", admin_user_path(@user), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure to delete the user?' }