.navbar.navbar-default{ role: 'navigation' }
  .container
    = link_to 'Mechanio', admin_dashboard_path, class: 'navbar-brand'
    - if admin_signed_in?
      = link_to 'Logout', destroy_admin_session_path, method: :delete, class: 'btn btn-default navbar-btn pull-right'
      %ul.nav.navbar-nav.navbar-left
        = active_li 'Dashboard', admin_dashboard_path, 'admin/dashboard'
        = active_li 'Users', admin_users_path, 'admin/users'
        = active_li 'Mechanics', admin_mechanics_path, 'admin/mechanics'
        = active_li 'Car models', admin_model_variations_path, 'admin/model_variations'
    - else
      = link_to 'Login', new_admin_session_path, class: 'btn btn-default navbar-btn'
