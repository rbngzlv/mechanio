%tr
  %td= job.status
  %td= job.title
  %td= job.created_at.to_s(:db)
  %td= job.user.full_name if job.user
  %td= job.mechanic ? job.mechanic.full_name : 'unassigned'
  %td= job.scheduled_at.to_s(:db) if job.scheduled_at
  %td= job.cost || 'pending'
  %td= link_to 'Edit', edit_admin_job_path(job)
