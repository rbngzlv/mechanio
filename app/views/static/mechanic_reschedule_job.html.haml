            .clearfix
              = link_to 'Add Part', '#', class: 'btn btn-success pull-right bottom-margin'
            .row
              .col-md-5.col-md-offset-7.col-sm-5.col-sm-offset-7.col-xs-12
                .table-responsive.clearfix
                  %table.table.table-bordered
                    %tbody
                      %tr
                        %th.active Labour + Parts
                        %td $ 287.75
                      %tr
                        %th.active GST
                        %td $ 23.73
                      %tr
                        %th.active Admin Fees
                        %td  
                      %tr
                        %th.active Total
                        %td $ 311.48 
            .tr-divider
            = link_to 'Update', '#js-modal', class: 'btn btn-success pull-right top-margin', data: {toggle: 'modal'}
