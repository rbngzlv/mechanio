            .table-responsive.clearfix
              %table.table.table-bordered
                %thead
                  %tr.active
                    %th Parts
                    %th Quantity
                    %th Price
                    %th GST
                    %th{colspan: '2'} Parts Total
                %tbody
                  %tr
                    %td Brake Pad
                    %td
                      .col-md-6.col-sm-6.col-xs-10
