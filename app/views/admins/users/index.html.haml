.navbar.navbar-default
  .navbar-brand Manage users
  = form_tag '?', method: :get, class: 'navbar-form navbar-right' do
    .form-group.right-inner-addon
      = text_field_tag 'query', @query, class: 'form-control input-sm'
      %i.glyphicon.glyphicon-remove-circle.clear-field
    .form-group
      = submit_tag 'Search', class: 'btn btn-sm btn-primary'


- if @users.empty?
  .panel.panel-default
    .panel-body.text-center
      No users found
-else
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th.col-md-1 Status
          %th Name
          %th Email
          %th Mobile
          %th.col-md-1 Signup date
          %th.col-md-1
      %tbody
        - @users.each do |u|
          %tr
            %td= bootstrap_label 'Active', 'success'
            %td= u.full_name
            %td= u.email
            %td= u.mobile_number
            %td= u.created_at.to_s(:date_short)
            %td.text-right= link_to "Details", admins_user_path(u)

  = paginate @users
