.navbar.navbar-default{ role: 'navigation' }
  .container
    = link_to 'Mechanio', admins_dashboard_path, class: 'navbar-brand'
    - if admin_signed_in?
      = link_to 'Logout', destroy_admin_session_path, method: :delete, class: 'btn btn-default navbar-btn pull-right'
      %ul.nav.navbar-nav.navbar-left
        = active_li 'Dashboard', admins_dashboard_path, 'admins/dashboard'
        = active_li 'Users', admins_users_path, 'admins/users'
        = active_li 'Mechanics', admins_mechanics_path, ['admins/mechanics']
        = active_li 'Car models', admins_model_variations_path, 'admins/model_variations'
        = active_li 'Jobs', admins_jobs_path, 'admins/jobs'
        = active_dropdown 'admins/service_plans' do
          %a.dropdown-toggle{ 'href' => '#', 'data-toggle' => 'dropdown' }
            Service plans
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Default service plans', default_admins_service_plans_path
            %li= link_to 'Service plans by model', by_model_admins_service_plans_path
        = active_li 'Symptoms', admins_symptoms_path, 'admins/symptoms'
        = active_li 'Discounts', admins_discounts_path, 'admins/discounts'
    - else
      = link_to 'Login', new_admin_session_path, class: 'btn btn-default navbar-btn'
