- defaults ||= defaults || {}
= f.simple_fields_for(location_assoc, defaults: f.options[:defaults].merge(defaults)) do |l|
  = l.input :address, label: 'Street Address'
  = l.input :suburb, input_html: { value: l.object.suburb_name, class: 'suburb-typeahead' }
  = l.association :state, prompt: '-- Please select --'
  = l.input :postcode
