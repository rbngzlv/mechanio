- if impersonated?
  .navbar.navbar-inverse.navbar-fixed-top
    .container
      %p.navbar-text Logged in as #{current_user.full_name}
      = link_to 'Back to admin', stop_impersonating_admins_users_path, class: 'btn btn-sm btn-default navbar-btn'

%header.navbar.header{ role: 'navigation' }
  .container
    .col-md-12.col-sm-12.col-xs-12
      - unless controller_name.eql? 'pages'
        .mobile-nav
          %i.glyphicon.glyphicon-th-list
      - if user_signed_in?
        .visible-lg.visible-md
          = link_to image_tag('mechanio_logo.png'), root_path, class: 'brand'
          .pull-right
            = link_to 'How It Works', root_path(anchor: "how-it-works"), class: 'btn btn-link pull-left'
            %ul.nav.pull-right
              %li.dropdown
                %button.btn.btn-dark.btn-sm.dropdown-toggle{ data: { toggle: 'dropdown' } }
                  = current_user.first_name
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to users_dashboard_path do
                      %i.glyphicon.glyphicon-dashboard
                      Dashboard
                  %li
                    = link_to users_cars_path do
                      %i.glyphicon.glyphicon-user
                      My Cars
                  %li
                    = link_to users_appointments_path do
                      %i.glyphicon.glyphicon-thumbs-up
                      My Appointments
                  %li
                    = link_to users_estimates_path do
                      %i.glyphicon.glyphicon-th-list
                      My Estimates
                  %li
                    = link_to users_profile_path do
                      %i.glyphicon.glyphicon-user
                      My Profile
                  %li
                    = link_to edit_users_settings_path do
                      %i.glyphicon.glyphicon-cog
                      Settings
                  %li.divider
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      %i.glyphicon.glyphicon-log-out
                      Log out
          %p.text-right Need Help ? / Call 1800 123 1234
        .visible-sm.visible-xs
          .pull-right.services-header-links-wrap
            = link_to 'Car Needs Servicing', '#', class: 'btn btn-primary col-md-3'
            = link_to 'Fix Your Car Problem', '#', class: 'btn btn-primary col-md-3'
      - elsif mechanic_signed_in?
        = link_to image_tag('mechanio_logo.png'), root_path, class: 'brand'
        .pull-right
          = link_to 'How It Works', root_path(anchor: "how-it-works"), class: 'btn btn-link pull-left'
          %ul.nav.pull-right
            %li.dropdown
              %button.btn.btn-dark.btn-sm.dropdown-toggle{ data: { toggle: 'dropdown' } }
                = current_mechanic.full_name
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to mechanics_dashboard_path do
                    %i.glyphicon.glyphicon-dashboard
                    Dashboard
                %li
                  = link_to mechanics_profile_path do
                    %i.glyphicon.glyphicon-user
                    My Profile
                %li
                  = link_to mechanics_jobs_path do
                    %i.glyphicon.glyphicon-thumbs-up
                    My Jobs
                %li
                  = link_to edit_mechanics_payout_method_path do
                    %i.glyphicon.glyphicon-credit-card
                    My Payment
                %li
                  = link_to edit_mechanics_settings_path do
                    %i.glyphicon.glyphicon-calendar
                    Settings
                %li.divider
                %li
                  = link_to destroy_mechanic_session_path, method: :delete do
                    %i.glyphicon.glyphicon-log-out
                    Log out
        %p.text-right Need Help ? / Call 1800 123 1234
      - else
        = link_to image_tag('mechanio_logo.png'), root_path, class: 'brand'
        .pull-right
          = link_to 'How It Works', root_path(anchor: "how-it-works"), class: 'btn btn-link pull-left to-upper home-header-link'
          = link_to 'Sign up', '', class: 'btn btn-link navbar-btn pull-left home-header-link to-upper', data: { toggle: 'modal', target: '#social-login-modal' }
          = link_to 'Login', '', class: 'btn btn-link navbar-btn pull-left home-header-link to-upper', data: { toggle: 'modal', target: '#login-modal' }
        %p.text-right Need Help ? / Call 1800 123 1234
