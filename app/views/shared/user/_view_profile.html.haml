.row
  .col-md-12
    .panel.panel-default.panel-rounded
      .panel-heading.clearfix
        %h4.panel-title
          %i.glyphicon.glyphicon-user
          = user.full_name
      .panel-body.modal-body.user-panel-body
        .row
          = render 'shared/user/profile_description', user: user
        - if show_comments
          .row
            .review-block
              .panel-body
                = render 'shared/comments', title: 'Reviews Left', comments: user.comments
