.panel.nested-panel.clearfix
  .col-md-7.right-border
    %p
      %b.text-info
        = job.user.full_name
    %p
      %i.glyphicon.glyphicon-play
      = job.car.display_title
    %p
      - job.tasks.each do |task|
        %b Services:
        = task.service_plan.display_title
  .col-md-5
    %p
      %i.glyphicon.glyphicon-time
      = job.date.to_formatted_s(:job_date_mechanic)
    %p
      %i.glyphicon.glyphicon-map-marker
      = job.location.full_address
    = link_to 'View Details', edit_mechanics_job_path(job), class: 'pull-right btn btn-info'
